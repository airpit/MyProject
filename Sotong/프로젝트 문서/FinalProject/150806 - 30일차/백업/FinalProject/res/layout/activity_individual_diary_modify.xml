<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/diarybackground"
    tools:context="com.example.finalproject.IndividualDiaryModifyActivity" >
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#aaffffff"
        >
    	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/individualDiaryModifyWriteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:background="#00B050"
                />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <EditText
                android:id="@+id/individualDiaryModifyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:background="#4493CDDD"
                android:text="수정할 제목"
                android:textSize="15dp"
                />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <EditText
                android:id="@+id/individualDiaryModifyContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                
                android:text="수정할 내용"
                
                android:textSize="15dp"
                android:background="#4493CDDD"
                android:lines="13"
                android:maxLines="20"
                />
        </LinearLayout>
    	
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                >
                <ImageButton
        	    	android:id="@+id/individualDiaryModifyPictureBtn"
        	    	android:layout_width="wrap_content"
        	    	android:layout_height="wrap_content"
        	    	android:src="@drawable/picture_btn"
        	    	android:layout_gravity="left"
        	    	/>
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                >
                <ImageButton
                	android:id="@+id/individualDiaryModifyCompleteBtn"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:src="@drawable/complete_btn"
                	android:layout_gravity="right"
                	/>
            </LinearLayout>
            
            
        	
            
            
        </LinearLayout>
    	
    
    </LinearLayout>
    
    
    
</LinearLayout>
